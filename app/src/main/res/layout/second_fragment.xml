<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/second_fragment_id"
                android:background="@android:color/holo_orange_light">


    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="  Detail Fragment"
        android:id="@+id/textView3"
        android:textSize="16pt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Car"
        android:id="@+id/b3"
        android:layout_marginBottom="29dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                    New Text"
        android:id="@+id/textView_Make"
        android:textSize="12pt"
        android:textColor="#ff040392"
        android:layout_toEndOf="@+id/b3"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView_model"
        android:layout_alignStart="@+id/textView_model"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                    New Text"
        android:id="@+id/textView_model"
        android:layout_marginTop="34dp"
        android:textSize="12pt"
        android:textColor="#ff071183"
        android:layout_below="@+id/textView_Make"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                     New Text"
        android:id="@+id/textView_rate"
        android:layout_marginTop="64dp"
        android:textSize="12pt"
        android:textColor="#ff071183"
        android:layout_toEndOf="@+id/b3"
        android:layout_below="@+id/textView_model"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/bnDelete"
        android:background="@android:color/holo_red_dark"
        android:layout_toEndOf="@+id/b3"
        android:layout_toRightOf="@+id/b3"
        android:layout_alignTop="@+id/b3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"/>
</RelativeLayout>